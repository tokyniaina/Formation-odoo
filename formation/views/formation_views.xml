<odoo>
    <record id="module_form_view" model="ir.ui.view">
        <field name="name">module.module.form</field>
        <field name="model">module.module</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Modules">
                <header>

                </header>
                <sheet string="">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="section_id"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>
    <!--vue kanban misy erreur-->
    <record id="module_kanban_view" model="ir.ui.view">
        <field name="name">module.module.kanban</field>
        <field name="model">module.module</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <field name="name"/>
                    <field name="section_id"/>
                    <field name="description"/>
                    <field name="code"/>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>
                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="code"/>
                                </strong>
                                <ul>
                                    <li t-if="record.name.raw_value">
                                        <field name="name"/>
                                    </li>
                                    <li t-if="record.section_id.raw_value">
                                        <field name="section_id"/>
                                    </li>
                                    <li t-if="record.description.raw_value">
                                        <field name="description"/>
                                    </li>
                                </ul>

                            </div>

                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="module_tree_view" model="ir.ui.view">
        <field name="name">module.module.tree</field>
