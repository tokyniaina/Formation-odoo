    <!--vue de enregistration-->
    <record id="registration_form_view" model="ir.ui.view">
        <field name="name">registration.registration.form</field>
        <field name="model">registration.registration</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Inscription">
                <header>
                   <button name="state"
                           widget="statusbar"
                           clickable="true"
                   />

                </header>
                <sheet string="">
                    <div class="oe_button_box" name="button_box">
                        <button name="%(claim_action_view)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-book"
                                context="{'search_default_reg_id' : active_id}"
                                help="show the information for this">
                            <field name="nbr" widget="statinfo" string="Réclamation"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="student_id"/>
                            <!--<field name="nbr"/>-->

                        </group>
                        <group>
                            <field name="code"/>
                            <field name="cycle_id"/>
                            <field name="year_id"/>
                            <!--<field name="state"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Reclamation">
                            <field name="claim_ids">

                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

