    <record id="claim_request_views_search" model="ir.ui.view">
        <field name="name">claim.claim.search</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="code"/>
                <field name="reg_id"/>
                <separator/>
                <filter name="new" string="Nouvelle" domain="[('state','=','new')]"/>
                <filter name="done" string="Validé" domain="[('state','=','done')]"/>
                <filter name="cancel" string="Annuler" domain="[('state','=','cancel')]"/>

                <!--Il ya une problem sur la dommaine-->
                <!--<group expand="0" string="Group By">-->
                <!--<filter string="Responsable" domain="[]" context="{'group_by':'user_id'}"/>-->
                <!--<filter string="Inscription" domain="[]" context="{'group_by':'reg_id'}"/>-->
                <!--</group>-->
            </search>
        </field>
    </record>

